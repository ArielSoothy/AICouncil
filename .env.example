# AI Provider APIs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Authentication
NEXTAUTH_SECRET=your_super_secret_nextauth_key_here
NEXTAUTH_URL=http://localhost:3000

# Optional: Redis for caching (leave empty for memory cache)
REDIS_URL=

# Rate Limiting (requests per minute per user)
RATE_LIMIT_RPM=10

# Database (for user management - optional for MVP)
DATABASE_URL=

# ============================================
# BROKER CONFIGURATION
# ============================================
# Choose your active broker: 'alpaca' (paper) or 'ibkr' (real)
ACTIVE_BROKER=alpaca

# --- Alpaca (Paper Trading - Default) ---
# Get your keys from: https://alpaca.markets (Paper Trading section)
ALPACA_API_KEY=your_alpaca_paper_api_key_here
ALPACA_SECRET_KEY=your_alpaca_paper_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# --- Interactive Brokers (Real Money Trading) ---
# Requires Client Portal Gateway running locally
# Setup guide: https://interactivebrokers.github.io/cpwebapi/
#
# Steps:
# 1. Download Client Portal Gateway from IBKR Portal > Settings > API Settings
# 2. Extract to ~/ibkr-gateway/ and run: ./bin/run.sh root/conf.yaml
# 3. Authenticate at https://localhost:5000 (session lasts 24 hours)
# 4. Test connection: npx ts-node scripts/test-ibkr-connection.ts
#
IBKR_GATEWAY_URL=https://localhost:5050/v1/api
IBKR_ACCOUNT_ID=  # Optional: Leave empty to use first available account

# Admin Access
# Set a secure password for production admin access
NEXT_PUBLIC_ADMIN_PASSWORD=your_secure_admin_password_here

# Environment
NODE_ENV=development
